[Unit]
Description=schroedinger miner
Wants=network-online.target
After=network-online.target
ConditionFileIsExecutable=/usr/local/bin/quantus-miner

[Service]
User=schroedinger
Group=schroedinger
Environment=RUST_LOG=info,miner=debug
ExecStart=/usr/local/bin/quantus-miner \
    --workers 4 \
    --engine cpu-montgomery \
    --port 9833 \
    --metrics-port 9919 \
    --progress-chunk-ms 5000
Restart=always
RestartSec=120

[Install]
WantedBy=multi-user.target
