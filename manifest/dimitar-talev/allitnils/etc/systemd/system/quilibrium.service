[Unit]
Description=quilibrium node
Wants=network-online.target
After=network-online.target
ConditionPathExists=/var/lib/quilibrium/data
ConditionPathExists=/var/lib/quilibrium/.local/bin/quilibrium

[Service]
Type=simple
User=quilibrium
Group=quilibrium
WorkingDirectory=/var/lib/quilibrium/data
ExecStart=/var/lib/quilibrium/.local/bin/quilibrium
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
