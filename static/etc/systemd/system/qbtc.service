[Unit]
Description=qbtc node
Wants=network-online.target
After=network-online.target
ConditionPathExists=/usr/local/bin/qbtc

[Service]
Type=simple
User=qbtc
Group=qbtc
WorkingDirectory=/var/lib/qbtc
ExecStart=/usr/local/bin/qbtc \
    --config /var/lib/qbtc/.node
Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
